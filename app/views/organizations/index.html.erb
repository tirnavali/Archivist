<p style="color: green"><%#= notice %></p>

<h1><%= t :organizations %></h1>

<%= link_to t("new_organization"), new_organization_path, class: "ui button green segment" %>

<div id="organizations">
<div class="segment">
        <%= paginate @organizations %>                
</div>
  <table class="ui celled padded very compact table">  
   <thead>
    <tr><th class="single line">Id</th>
    <th><%= t :name %></th>    
    <th><%= t :created_at%></th>
    <th><%= t :updated_at%></th>
    
    <th><%= t :action%></th>
   </tr></thead>
  <tbody>  
    <%= render "organization_table", class:"ui right floated pagination menu" %>
  </tbody>
    <tfoot>
    
      <tr><th colspan="8">
        <div class="segment">
        <%= paginate @organizations %>                
        </div>
      </th>
    </tr></tfoot>
  </table>
    
    <p>
      <%#= link_to "Show this organization", organization %>
    </p>
 
</div>


