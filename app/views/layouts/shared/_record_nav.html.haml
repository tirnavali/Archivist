.ui.steps
  -if current_page?(controller: 'record_metadata', action: 'new') || current_page?(controller: 'record_metadata', action: 'edit') 
    .active.step
      %i.edit.icon
      .content
        .title Üstveriler
        .description Belge tanımlayıcılarını girin
    .disabled.step
      %i.attach.icon
      .content
        .title Dosya
        .description Belge görüntülerini ekleyin
  -elsif current_page?(controller: 'record_attachments', action: 'new') || current_page?(edit_record_attachment_path(record_attachment_id))
    .completed.step
      %i.edit.icon
      .content
        .title Üstveriler
        .description Belge tanımlayıcılarını girin
    .active.step
      %i.attach.icon
      .content
        .title Dosya
        .description Belge görüntülerini ekleyin
  -else
    .active.step
      %i.edit.icon
      .content
        .title Üstveriler
        .description Belge tanımlayıcılarını girin
    .disabled.step
      %i.attach.icon
      .content
        .title Dosya
        .description Belge görüntülerini ekleyin