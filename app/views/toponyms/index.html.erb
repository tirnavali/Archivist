<p style="color: green"><%= notice %></p>

<h1>Toponyms</h1>
<p>
  <%= link_to "New toponym", new_toponym_path, class:"ui button teal small"%>
</p>
<div id="toponyms">
<table class="ui celled padded very compact table">  
    <thead>
      <tr><th class="single line">Id</th>
      <th><%= t :name %></th>    
      <th><%= t :created_at%></th>
      <th><%= t :updated_at%></th>
      
      <th><%= t :action%></th>
    </tr></thead>
    <tbody>  
      <%= render "toponyms_table", class:"ui right floated pagination menu" %>
    </tbody>
      <tfoot>
      
        <tr><th colspan="8">
          <div class="segment">
          <%= paginate @toponyms %>                
          </div>
        </th>
      </tr></tfoot>
   </table>
</div>