<% @toponyms.each do |toponym| %>
<tr>
  <td>
    <div class="ui right aligned"><%= link_to "#{toponym.id}", toponym %></div>
  </td>
  <td>
    <div class="ui aligned"><%= toponym.name%> </div>
  </td>

  <td class="right aligned">
    <div class="ui label" data-rating="3" data-max-rating="3">
    <%=toponym.created_at.strftime("%d.%m.%Y %H.%M")%></div>
  </td>

  <td class="right aligned ">
    <div class="ui label">
      <%=toponym.updated_at.strftime("%d.%m.%Y %H.%M")  %>
    </div>
  </td>

  <td class="collapsing">
    <span>
      <%= link_to  toponym do %>
        <i class="large folder open icon "></i>
      <% end %>
    </span>
    <span>
      <%= link_to  edit_toponym_path toponym.id do %>
        <i class="large orange edit icon "></i>
      <% end %>
    </span>
    <span>    
        <%= link_to toponym,  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  do %>      
          <i class="red large remove icon "></i>
        <% end %>
    </span>
  </td>

</tr>
<% end %>