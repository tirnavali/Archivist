<div id="<%= dom_id subject %>" class="ui stacked segment">
<div class="ui four column celled centered grid">
  <% subject.class.column_names.each do |column| %>
    <div class="row">
      <div class="right aligned column">
        <strong><%= t(column)%></strong>
      </div>
      <div class="column">
        <%= subject[column]%>
      </div>
    </div>
  <% end %>
</div>
</div>
