<% @subjects.each do |subject| %>

<tr>
  <td>
    <div class="ui right aligned"><%= link_to "#{subject.id}", subject %></div>
  </td>
  <td>
    <div class="ui aligned"><%= subject.name%> </div>
  </td>
  

  <td class="right aligned">
    <div class="ui label" data-rating="3" data-max-rating="3">
    <%=subject.created_at.strftime("%d.%m.%Y %H.%M")%></div>
  </td>

  <td class="right aligned ">
    <div class="ui label">
      <%=subject.updated_at.strftime("%d.%m.%Y %H.%M")  %>
    </div>
  </td>

 
  <td class="collapsing">
    <span>
      <%= link_to  subject do %>
        <i class="large folder open icon "></i>
      <% end %>
    </span>
    <span>
      <%= link_to  edit_subject_path subject.id do %>
        <i class="large orange edit icon "></i>
      <% end %>
    </span>
    <span>    
        <%= link_to subject ,  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  do %>      
          <i class="red large remove icon "></i>
        <% end %>
    </span>
  
  </td>
</tr>
<% end %>