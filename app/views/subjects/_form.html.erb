<%= simple_form_for @subject, html: { class: "ui form"} do |f| %>
  <div class="inline fields">
    <%= f.input :name ,input_html: { autofocus: true } ,wrapper_html: { class: 'twelve wide field' } ,label: false%>
    <div class="field">
      <%= f.button :submit, class: "ui primary button" %>
    </div>
    <div class="field">
      <%= link_to t("cancel"), subjects_path %>
    </div>
  </div>
<% end %>
