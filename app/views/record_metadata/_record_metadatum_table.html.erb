<% @record_metadata.each do |record_metadatum| %>
<tr>
   <td class="collapsing">
    <div class="ui right aligned">
      <%= link_to record_metadatum do %>
      <%= record_metadatum.id %>
        <i class="folder open icon "></i>
      <% end %>
    </div>
  </td>
  <td>
    <div class="ui right aligned"><%= link_to record_metadatum.fond, fond_path(record_metadatum.fond) %></div>
  </td>
  <td>
    <div class="ui right aligned"><%= record_metadatum.organization_code%></div>
  </td>
  <td class="right aligned">
    <%=record_metadatum.box%>
  </td>
  <td>
    <div class="right aligned" data-rating="3" data-max-rating="3">
    <%=record_metadatum.folder%></div>
  </td>
  <td class="right aligned">
    <%=record_metadatum.order%>
  </td>
  <td>
  <div class="left aligned">
    <%= record_metadatum.summary[..200]%>
    </div>
  </td>
  <% if policy(:menu).show?  %>
    <td class="right aligned">
      <%if record_metadatum.is_secret? %>
      <i class="user red secret icon"></i>
      <% else %>
      <i class="green check icon"></i>
      <% end %>
    </td>
    <td class="right aligned">
      <% if record_metadatum.record_attachment %> <i class="green check icon"></i> <% else %> <i class="red x icon"> <% end %>
    </td>
    <td class="left aligned">
      <% if record_metadatum.user %>
      <%=  record_metadatum.user%> <span class="custom last action"> created </span>this record. 
      <% end %>
    </td>
    <%= render "layouts/shared/actions", resource: record_metadatum  %>
  <% end %>
</tr>
<% end %>   