<p style="color: green"><%= notice %></p>

<h1><%= t('record_metadata') %></h1>
<%= search_form_for(
  @q,
  url: search_record_metadata_path,
  html: { method: :post}
) do |f|%>
<fieldset class="ui segment fields">
  <%= f.combinator_select %>
<%= f.grouping_fields do |g|%>
      <%= g.condition_fields do |c| %>
      <div class="field ">
      <%= c.attribute_fields do |a| %>
        <%=a.attribute_select associations: [:fond, :subjects, :organization] %>
      <% end %>
      <%= c.predicate_select %>
      <%= c.value_fields do |v| %>
        <%= v.text_field :value%>
      <% end %>      
      <a  id="remove-field" class="ui red tiny label" data-controller="search" data-action="search#remove"> 
        Remove
      </a>
    </div>
  <% end %>
<% end %>
</fieldset>
  <a id="add-field" class="ui tiny button" data-controller="search" data-action="search#add"> Add new field</a>
  <%= f.submit class: "ui tiny primary button"%>
<% end %>

<%= link_to t("new_record_metadatum"), new_record_metadatum_path, class: "ui green button segment"%>
<div class="ui divided items">
  <% @record_metadata.each do |metadatum| %>
    <%= render partial: "record_metadatum_card", locals:{ metadatum: metadatum } %>
  <% end %>
</div>
<div id="record_metadata">
  <table class="ui celled padded very compact table">
    <thead>
      <tr>
        <th class="single line">Id</th>
        <th>Fond</th>
        <th>Organization Code</th>
        <th>Box</th>
        <th>Folder</th>
        <th>Order</th>
        <th>Images</th>
        <th>Summary</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      
        <%= render partial: "record_metadatum_table" %>
        
    </tbody>
    <tfoot>
      <tr>
        <th colspan="9">
          <div class="ui right floated pagination menu">
            <a class="icon item">
              <i class="left chevron icon"></i>
            </a>
            <a class="item">1</a>
            <a class="item">2</a>
            <a class="item">3</a>
            <a class="item">4</a>
            <a class="icon item">
              <i class="right chevron icon"></i>
            </a>
          </div>
        </th>
      </tr>
    </tfoot>
  </table>

</div>




