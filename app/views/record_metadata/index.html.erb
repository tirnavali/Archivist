<p style="color: green"><%= notice %></p>

<h1>Record metadata</h1>
<%= search_form_for(
  @q,
  url: search_record_metadata_path,
  html: { method: :post }
) do |f|%>
<fieldset class="fields">
  <%= f.condition_fields do |c| %>
  <div class="field">
      <%= c.attribute_fields do |a| %>
        <%=a.attribute_select associations: [:fond, :subjects, :organization] %>
      <% end %>
      <%= c.predicate_select %>
      <%= c.value_fields do |v| %>
        <%= v.text_field :value%>
      <% end %>      
      <a id="remove-field" class="ui tiny red button" data-controller="search" data-action="search#remove"> Remove</a>
    </div>
  <% end %>
  <a id="add-field" class="ui tiny button" data-controller="search" data-action="search#add"> Add new field</a>
</fieldset>
  <%= f.submit %>
<% end %>

<%= link_to "New record metadatum", new_record_metadatum_path, class: "ui green button segment"%>
<div id="record_metadata">
  <table class="ui celled padded very compact table">
    <thead>
      <tr>
        <th class="single line">Id</th>
        <th>Fond</th>
        <th>Organization Code</th>
        <th>Box</th>
        <th>Folder</th>
        <th>Order</th>
        <th>Images</th>
        <th>Summary</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      
        <%= render partial: "record_metadatum_table" %>
        
    </tbody>
    <tfoot>
      <tr>
        <th colspan="9">
          <div class="ui right floated pagination menu">
            <a class="icon item">
              <i class="left chevron icon"></i>
            </a>
            <a class="item">1</a>
            <a class="item">2</a>
            <a class="item">3</a>
            <a class="item">4</a>
            <a class="icon item">
              <i class="right chevron icon"></i>
            </a>
          </div>
        </th>
      </tr>
    </tfoot>
  </table>

</div>




