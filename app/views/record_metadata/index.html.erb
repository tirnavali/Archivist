<p style="color: green"><%= notice %></p>

<h1>Record metadata</h1>
<%= link_to "New record metadatum", new_record_metadatum_path, class: "ui green button segment"%>
<div id="record_metadata">
  <table class="ui celled unstackable table">
    <thead>
      <tr>
        <th class="single line">Id</th>
        <th>Fond</th>
        <th>Organization Code</th>
        <th>Box</th>
        <th>Folder</th>
        <th>Order</th>
        <th>Images</th>
        <th>Summary</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @record_metadata.each do |record_metadatum| %>
        <%= render partial: "record_metadatum_table", locals: {record_metadatum: record_metadatum} %>
      <% end %>    
    </tbody>
    <tfoot>
      <tr>
        <th colspan="9">
          <div class="ui right floated pagination menu">
            <a class="icon item">
              <i class="left chevron icon"></i>
            </a>
            <a class="item">1</a>
            <a class="item">2</a>
            <a class="item">3</a>
            <a class="item">4</a>
            <a class="icon item">
              <i class="right chevron icon"></i>
            </a>
          </div>
        </th>
      </tr>
    </tfoot>
  </table>

</div>




