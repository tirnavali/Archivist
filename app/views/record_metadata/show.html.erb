<p style="color: green"><%= notice %></p>

<%= render @record_metadatum %>

<div class="row">
  <div class="four wide column"></div>
  <div class="seven wide centered column">
  <div class="ui buttons">
    <% if policy(@record_metadatum).update?  %>
      <%= link_to t("edit"), edit_record_metadatum_path(@record_metadatum), class: "ui green basic button" %> 
    <% end %>
    <% if policy(@record_metadatum).destroy?  %>
      <%= button_to t("destroy"), @record_metadatum, method: :delete, class: "ui red basic button" %>
    <% end %>
  </div>
  <%= link_to  record_metadata_path, class:"ui secondary button" do %>
    <i class="angle double left icon"></i> <%= t "record_metadata" %>
  <% end %>
  </div>
</div>