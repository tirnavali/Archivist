<p style="color: green"><%= notice %></p>

<%= render @record_metadatum %>

<div class="ui secondary pointing menu">
  <% if policy(@record_metadatum).update?  %>
    <%= link_to t("edit"), edit_record_metadatum_path(@record_metadatum), class: "item" %> 
  <% end %>
  <% if policy(@record_metadatum).destroy?  %>
    <%= button_to t("destroy"), @record_metadatum, method: :delete, class: "ui button item" %>
  <% end %>

  <div class="right menu">
    <%= link_to t("back"), record_metadata_path, class: "ui item"  %>
  </div>
</div>