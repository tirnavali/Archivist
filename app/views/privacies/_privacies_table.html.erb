<% @privacies.each do |privacy| %>

<tr>
  <td>
    <div class="ui right aligned"><%= link_to "#{privacy.id}", privacy %></div>
  </td>
  <td>
    <div class="ui aligned"><%= privacy.name%> </div>
  </td>
  <td>
    <div class="ui right aligned"><%= privacy.audits.last.audited_changes if privacy.audits.last %> </div>
  </td>
  <td>
    <div class="ui right aligned"><%= privacy.audits.count%> <span class="ui label"> Open?</span> </div>
  </td>
  
  <td class="right aligned">
    <div class="ui label" data-rating="3" data-max-rating="3">
    <%=l privacy.created_at, format: :long%></div>
  </td>

  <td class="right aligned ">
    <div class="ui label">
      <%=l privacy.updated_at, format: :long  %>
    </div>
  </td>

 
  <td class="collapsing">
    <span>
      <%= link_to  privacy do %>
        <i class="large folder open icon "></i>
      <% end %>
    </span>
    <span>
      <%= link_to  edit_privacy_path privacy.id do %>
        <i class="large orange edit icon "></i>
      <% end %>
    </span>
    <span>    
        <%= link_to privacy ,  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  do %>      
          <i class="red large remove icon "></i>
        <% end %>
    </span>
  
  </td>
</tr>
<% end %>