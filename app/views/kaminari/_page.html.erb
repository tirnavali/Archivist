<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <%= link_to  page, url, {remote: remote, class:"teal active item", rel: page.rel, data: {turbo_action: "advance"}} %>
<% else %>
  <%= link_to  page, url, {remote: remote, class:"item", rel: page.rel, data: {turbo_action: "advance"}} %>
<% end %>
  
  <%#= link_to_unless page.current?, page, url, {remote: remote, class:"item", rel: page.rel} %>
