<p style="color: green"><%= notice %></p>

<h1>Documents</h1>

<div id="documents">
  <% @documents.each do |document| %>
    <%= render document %>
    <p>
      <%= link_to "Show this document", document, class: "ui primary button"%>
    </p>
  <% end %>
</div>

<%= link_to "New document", new_document_path %>
