<%= form_with(model: document) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_area :summary %>
  </div>

  <div>
    <%= form.label :pub_type_id, style: "display: block" %>
    <%#= form.text_field :pub_type_id %>
    <%= form.collection_select :pub_type_id, PubType.all, :id, :to_s, prompt: true %>
  </div>

  <div>
    <%= form.label :language_id, style: "display: block" %>
    <%#= form.text_field :pub_type_id %>
    <%= form.collection_select :language_id, Language.all, :id, :to_s, prompt: true %>
  </div>

  <div>
    <%= form.label :organization_id, style: "display: block" %>
    <%#= form.text_field :pub_type_id %>
    <%= form.collection_select :organization_id, Organization.all, :id, :to_s, prompt: true %>
  </div>

  <div>
    <%= form.label :subject_id, style: "display: block" %>
    <%#= form.text_field :pub_type_id %>
    <%= form.collection_select :subject_id, Subject.all, :id, :to_s, prompt: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
