<%=tag.h1 "#{@user} all activities" %>

<div>
  Total actions today: <%= @audits.user_activities(@user).count %>
  Total create action today: <%= @audits.user_activities(@user).where("action = ?", "create").today.size %>
  Total update action today: <%= @audits.user_activities(@user).update_actions.today.count %>
</div>

<table class="ui small table">
  <thead>
    <th>Action</th>
    <th>DataModel</th>
    <th>Created At </th>
  </thead>
  <tbody>
  
  <% @audits.user_activities(@user).each do |audit| %>

  <tr>
      <td><%=tag.span audit.action, class:"ui " %></td>
      <td><%=tag.span audit.auditable_type, class:"ui " %></td>
      <td><%=tag.span audit.created_at, class:"ui " %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= console %>