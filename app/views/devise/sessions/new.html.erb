  <div class="ui text container">
<div class="ui middle aligned center aligned grid">
  <div class="six wide column">
    <h2 class="ui teal image header">
      <div class="content">
        <%= t('login_to_your_account') %>
      </div>
    </h2>



  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui large  form  "}) do |f| %>
    <div class="ui stacked segment">
      <div class="field">
        <div class="ui left icon labeled input">
          <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('email'), class:"" %>
          
          
        </div>
      </div>

      <div class="field">
        <div class="ui left icon labeled input">
          <i class="lock icon"></i>

          
          <%= f.password_field :password, autocomplete: "current-password", placeholder: t('password') %>
          </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me, class:"hidden" %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="">
      <%= f.submit  t("login"), class:"ui fluid  primary button" %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>
</div>

</div>
</div>


