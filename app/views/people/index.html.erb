<p style="color: green"><%= notice %></p>

<h1>People</h1>

<%= link_to t("new_person"), new_person_path, class: "ui button green segment" %>

<div id="people">

<%= search_form_for @q do |f| %>

  # Search if the name field contains...
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  # Search if an associated articles.title starts with...
  <%#= f.label :articles_title_start %>
  <%#= f.search_field :articles_title_start %>

  # Attributes may be chained. Search multiple attributes for one value...
  <%#= f.label :name_or_description_or_email_or_articles_title_cont %>
  <%#= f.search_field :name_or_description_or_email_or_articles_title_cont %>

  <%= f.submit %>
  <% end %>
<div class="segment">
        <%= paginate @people %>                
</div>
  <table class="ui celled padded very compact table">  
   <thead>
    <tr><th class="single line">Id</th>
    <th><%= t :name %></th>    
    <th><%= t :created_at%></th>
    <th><%= t :updated_at%></th>
    
    <th><%= t :action%></th>
   </tr></thead>
  <tbody>  
    <%= render "people_table", class:"ui right floated pagination menu" %>
  </tbody>
    <tfoot>  
      <tr><th colspan="8">
        <div class="segment">
        <%= paginate @people %>                
        </div>
      </th>
    </tr></tfoot>
  </table>
</div>