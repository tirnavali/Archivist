<p style="color: green"><%= notice %></p>

<h1>People</h1>

<%= link_to t("new_person"), new_person_path, class: "ui button teal small" %>
<%= turbo_frame_tag "new_person", src: new_person_path(@person), target: "_top" %>


<div id="people">

<%= search_form_for @q, class:"ui form" do |f| %>
 
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont, class:"field" %>
  <%= f.submit class:"ui primary button"%>

  <% end %>
<div class="segment">
        <%= paginate @people %>                
</div>
  <table class="ui celled padded very compact table">  
   <thead>
    <tr><th class="single line">Id</th>
    <th><%=sort_link(@q, :name) %></th>    
    <th><%=sort_link(@q, :created_at) %></th>
    <th><%=sort_link(@q, :updated_at) %></th>
    
    <th><%= t :action%></th>
   </tr></thead>
  <tbody>  
    <%= render "people_table", class:"ui right floated pagination menu" %>
  </tbody>
    <tfoot>  
      <tr><th colspan="8">
        <div class="segment">
        <%= paginate @people %>                
        </div>
      </th>
    </tr></tfoot>
  </table>
</div>