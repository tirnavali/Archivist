<%= simple_form_for @fond, html: { class: "ui form"} do |f| %>
  <%= f.input :name %>
  <%= f.input :explanation %>
  <%= f.association :parent, 
    collection: Fond.order(:name),
    html: {class: 'ui search dropdown' },
    wrapper_html: {"data-controller": "dropdown" } 
    %>
  <%= f.button :submit %>
<% end %>