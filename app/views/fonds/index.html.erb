<p style="color: green"><%= notice %></p>

<h1>Fonds</h1>


<%= link_to "New fond", new_fond_path, class: "ui segment primary button " %>
<!-- added new -->
<div id="fonds">
  <table class="ui celled padded table">
    <thead>
      <tr>
        <th class="single line">Id</th>
        <th>Fond Name</th>
        <th>Parent Fond</th>
        <th>Child Fonds</th>
        <th>Cildren Size</th>
        <th>Fond Depth</th>
        <th>-</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @fonds.each do |fond| %>
        <%= render partial: "fond_table", locals: {fond: fond} %>
        
      <% end %>
    </tbody>
    <tfoot>
      <tr><th colspan="8">
        <div class="ui right floated pagination menu">
          <a class="icon item">
            <i class="left chevron icon"></i>
          </a>
          <a class="item">1</a>
          <a class="item">2</a>
          <a class="item">3</a>
          <a class="item">4</a>
          <a class="icon item">
            <i class="right chevron icon"></i>
          </a>         

        </div>
      </th>
    </tr></tfoot>
  </table>
</div>
