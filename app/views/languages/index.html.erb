<p style="color: green"><%= notice %></p>
<div id="languages">
<h1>Languages</h1>
<%= link_to "New language", new_language_path %>
  <table class="ui celled padded very compact table">  
    <thead>
      <tr><th class="single line">Id</th>
      <th><%= t :name %></th>    
      <th><%= t :created_at%></th>
      <th><%= t :updated_at%></th>
      
      <th><%= t :action%></th>
    </tr></thead>
    <tbody>  
      <%= render "languages_table", class:"ui right floated pagination menu" %>
    </tbody>
      <tfoot>
      
        <tr><th colspan="8">
          <div class="segment">
          <%= paginate @languages %>                
          </div>
        </th>
      </tr></tfoot>
   </table>
</div>